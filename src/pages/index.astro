---
/**
 * HomePage - Main landing page with Bento Grid layout
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import TiltCard from '../components/ui/TiltCard.jsx';
import HeroCard from '../components/bento/HeroCard.jsx';
import DiscordPresence from '../components/bento/DiscordPresence';
import SpotifyPresence from '../components/bento/SpotifyPresence';
import SydneyTime from '../components/bento/SydneyTime';
import TechStack from '../components/bento/TechStack.jsx';
import Socials from '../components/bento/Socials.jsx';
import GitHubGraph from '../components/bento/GitHubGraph.jsx';
---

<BaseLayout>
  <div class="min-h-screen py-8 px-4 md:py-12">
    <div class="bento-grid">
      <!-- Row 1: Hero (2x2) + Discord (1x2) + Spotify (1x2) -->
      <TiltCard client:load className="span-2x2">
        <HeroCard client:load />
      </TiltCard>

      <TiltCard client:load className="span-1x2">
        <DiscordPresence client:load />
      </TiltCard>

      <TiltCard client:load className="span-1x2">
        <SpotifyPresence client:load />
      </TiltCard>

      <!-- Row 3: Tech Stack (2x1) + Socials (1x1) + Time (1x1) -->
      <TiltCard client:load className="span-2x1">
        <TechStack client:load />
      </TiltCard>

      <TiltCard client:load className="span-1x1">
        <Socials client:load />
      </TiltCard>

      <TiltCard client:load className="span-1x1">
        <div class="glass-card h-full flex items-center justify-center p-6 text-center">
          <SydneyTime client:load />
        </div>
      </TiltCard>

      <!-- Row 4: GitHub Graph - Full width -->
      <TiltCard client:load className="span-4x1">
        <GitHubGraph client:load username="notschema" />
      </TiltCard>
    </div>
  </div>
</BaseLayout>
