---
/**
 * HomePage - Feature Card Grid layout with dashed borders
 * Restyled with 21st.dev aesthetic
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import FeatureCard from "../components/ui/FeatureCard";
import HeroCard from "../components/bento/HeroCard.jsx";
import DiscordPresence from "../components/bento/DiscordPresence";
import SpotifyPresence from "../components/bento/SpotifyPresence";
import GitHubProfile from "../components/bento/GitHubProfile";
import XCard from "../components/bento/XCard";
import BugBountyCard from "../components/bento/BugBountyCard";
import RetroTV from "../components/bento/RetroTV";
---

<BaseLayout title="Home | Ashton.com.au">
  <div class="min-h-screen py-8 px-4 md:py-12">
    <div class="mx-auto max-w-5xl">
      <!-- Feature Grid with dashed borders -->
      <div
        class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-4 auto-rows-[minmax(140px,auto)]"
      >
        <!-- Hero Card - spans 2 cols, 2 rows (Top Left) -->
        <div
          class="col-span-1 row-span-2 sm:col-span-2 sm:row-span-2 min-h-[300px]"
        >
          <FeatureCard client:load delay={0.1} className="p-0 h-full">
            <HeroCard client:load />
          </FeatureCard>
        </div>

        <!-- GitHub - spans 2 cols (Top Right) -->
        <div class="col-span-1 sm:col-span-2 min-h-[140px]">
          <FeatureCard client:load delay={0.2} className="p-0 h-full">
            <GitHubProfile client:load />
          </FeatureCard>
        </div>

        <!-- Spotify - spans 1 col -->
        <div class="col-span-1 min-h-[140px]">
          <FeatureCard client:load delay={0.3} className="p-0 h-full">
            <SpotifyPresence client:load />
          </FeatureCard>
        </div>

        <!-- X/Twitter - spans 1 col -->
        <div class="col-span-1 min-h-[140px]">
          <FeatureCard client:load delay={0.4} className="p-0 h-full">
            <XCard client:load />
          </FeatureCard>
        </div>

        <!-- Discord - spans 2 cols -->
        <div class="col-span-1 sm:col-span-2 min-h-[140px]">
          <FeatureCard client:load delay={0.5} className="p-0 h-full">
            <DiscordPresence client:load />
          </FeatureCard>
        </div>

        <!-- Bug Bounty - spans 2 cols -->
        <div class="col-span-1 sm:col-span-2 min-h-[140px]">
          <FeatureCard client:load delay={0.55} className="p-0 h-full">
            <BugBountyCard client:load />
          </FeatureCard>
        </div>

        <!-- RetroTV - spans full 4 cols -->
        <div class="col-span-1 sm:col-span-2 md:col-span-4 min-h-[200px]">
          <FeatureCard client:load delay={0.6} className="p-0 h-full">
            <RetroTV client:load />
          </FeatureCard>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
