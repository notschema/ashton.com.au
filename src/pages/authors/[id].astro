---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const authors = await getCollection("authors");
  const posts = await getCollection("blog");

  return authors.map((author) => {
    // Get all posts by this author
    const authorPosts = posts
      .filter(
        (post) => post.data.authors?.includes(author.id) && !post.data.draft
      )
      .sort(
        (a, b) =>
          new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
      );

    return {
      params: { id: author.id },
      props: { author, posts: authorPosts },
    };
  });
}

const { author, posts } = Astro.props;
const { Content } = await render(author);
---

<BaseLayout
  title={`${author.data.name} | Ashton.com.au`}
  description={author.data.bio || `Posts by ${author.data.name}`}
>
  <div class="max-w-3xl mx-auto px-4 py-12 sm:py-20">
    <!-- Author Header -->
    <header class="mb-12">
      <div class="flex items-start gap-6">
        {
          author.data.avatar && (
            <img
              src={author.data.avatar}
              alt={author.data.name}
              class="w-24 h-24 rounded-full border-2 border-border object-cover"
            />
          )
        }
        <div class="flex-1">
          <h1 class="text-3xl font-bold mb-2">{author.data.name}</h1>
          {
            author.data.pronouns && (
              <p class="text-muted-foreground text-sm mb-2">
                {author.data.pronouns}
              </p>
            )
          }
          {
            author.data.bio && (
              <p class="text-muted-foreground">{author.data.bio}</p>
            )
          }
        </div>
      </div>

      <!-- Social Links -->
      {
        (author.data.website ||
          author.data.github ||
          author.data.twitter ||
          author.data.linkedin ||
          author.data.mail) && (
          <div class="flex flex-wrap gap-4 mt-6 text-sm">
            {author.data.website && (
              <a
                href={author.data.website}
                target="_blank"
                rel="noopener noreferrer"
                class="text-muted-foreground hover:text-primary transition-colors flex items-center gap-1.5"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <circle cx="12" cy="12" r="10" />
                  <line x1="2" y1="12" x2="22" y2="12" />
                  <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
                </svg>
                Website
              </a>
            )}
            {author.data.github && (
              <a
                href={author.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-muted-foreground hover:text-primary transition-colors flex items-center gap-1.5"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
                GitHub
              </a>
            )}
            {author.data.twitter && (
              <a
                href={author.data.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="text-muted-foreground hover:text-primary transition-colors flex items-center gap-1.5"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
                Twitter
              </a>
            )}
            {author.data.linkedin && (
              <a
                href={author.data.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-muted-foreground hover:text-primary transition-colors flex items-center gap-1.5"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
                LinkedIn
              </a>
            )}
            {author.data.mail && (
              <a
                href={`mailto:${author.data.mail}`}
                class="text-muted-foreground hover:text-primary transition-colors flex items-center gap-1.5"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <rect x="2" y="4" width="20" height="16" rx="2" />
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                </svg>
                Email
              </a>
            )}
          </div>
        )
      }
    </header>

    <!-- Author Bio Content -->
    {
      author.body && (
        <section class="prose mb-12">
          <Content />
        </section>
      )
    }

    <!-- Posts by Author -->
    {
      posts.length > 0 && (
        <section>
          <h2 class="text-xl font-semibold mb-6 pb-2 border-b border-border">
            Posts by {author.data.name}
          </h2>
          <ul class="space-y-4">
            {posts.map((post) => (
              <li>
                <a
                  href={`/blog/${post.id}`}
                  class="group block p-4 rounded-xl border border-border/50 bg-card/50 hover:border-foreground/20 transition-all duration-300"
                >
                  <h3 class="font-medium group-hover:text-primary transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-muted-foreground mt-1">
                    {post.data.date.toLocaleDateString("en-AU", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </p>
                </a>
              </li>
            ))}
          </ul>
        </section>
      )
    }

    <!-- Back Link -->
    <div class="mt-12 pt-6 border-t border-border">
      <a
        href="/blog"
        class="text-muted-foreground hover:text-primary transition-colors text-sm"
      >
        ‚Üê Back to Blog
      </a>
    </div>
  </div>
</BaseLayout>
